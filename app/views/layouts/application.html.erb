<!DOCTYPE html>
<html>
<head>
<title>Pragprog Books Online Store</title>
<%= stylesheet_link_tag "scaffold" %>
<%= stylesheet_link_tag "depot" , :media => "all" %>
<%= javascript_include_tag "http://www.google.com/jsapi", "chartkick" %>
<%= stylesheet_link_tag 'http://yandex.st/bootstrap/3.1.1/css/bootstrap.min.css' %>
<%= javascript_include_tag 'http://yandex.st/bootstrap/3.1.1/js/bootstrap.min.js' %>
<%= javascript_include_tag :defaults %>
<%= csrf_meta_tag %>
</head>
<body id="store">
<div id="banner">
<%= image_tag("logo.png" ) %>
<%= @page_title || "Matic Bookshelf" %>
</div>
<div id="columns" >
<div id="side" >
<!-- <div id="cart" >
 --><%#= render @cart %>
<% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id => "cart" ) do %>
          <%= render @cart %>
        <% end %>
      <% end %>
 <% if session[:user_id] %>
 <table border ="1">
      <%= link_to 'Home' , store_index_path %><br />
     <%= link_to 'Orders' ,orders_path %><br>
     <%= link_to 'Products' , products_path %><br />
     <%= link_to 'Users' ,users_path %><br /><br>
    <%= button_to 'Logout' , logout_path, :method => :delete %><br />
 <% else %>
    <br />
    <td align ="center"> <%= button_to 'Signin' , login_path %><br /></td>
 <% end %>
  </table>
  </div>
  <div id="main">
    <%= yield %>
  </div>
 </div>
</body>
</html>
